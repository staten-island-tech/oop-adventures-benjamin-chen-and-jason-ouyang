
class Person:
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health
        self.score = 0

    def attack(self, enemy):
        enemy.health -= self.atk
        print(f"{self.name} attack {enemy.name} ad did {self.atk} damage")

    def heal(self):
        self.health += 20
        print(f"{self.name} healed and your health is {self.health}")

    def alive(self):
        return self.health > 0


class Enemy:
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health

    def attack(self, player):
        player.health -= self.atk
        print(f"{self.name} attacks {player.name} for {self.atk} damage!")

    def alive(self):
        return self.health > 0

player = Person("Hero", 15, 100)
enemy = Enemy("Rock Golem", 10, 50)

print("start game")


while player.alive() and enemy.alive():
    print("1: attack")
    print("2: heal")
    print("3: status")

    action = input("Choose an action: ")

    if action == "1":
        player.attack(enemy)

    elif action == "2":
        player.heal()

    elif action == "3":
        print(f"player health: {player.health}")
        print(f"enemy health: {enemy.health}")

    else:
        print("not available")

    if enemy.alive():
        enemy.attack(player)

if player.alive():
    print("yoou defeated the engmy")
else:
    print("you lost")
