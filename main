
class Person:
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health
        self.inventory = []

    def pick_up(self, item):
        self.inventory.append(item)
        print(f"{self.name} picked up {item}")
        print("Inventory:", self.inventory)

    def attack(self, enemy):
        print(f"{self.name} attacks {enemy.name} for {self.atk} damage!")
        enemy.health -= self.atk

    def heal(self):
        self.health += 20
        print(f"{self.name} healed! Health is now {self.health}")

    def alive(self):
        return self.health > 0


player = Person("You", 30, 100)
enemy = (rock, golem, goblin, boss)

while player.alive() and enemy.alive():
    print("1. Attack")
    print("2. Heal")
    action = input("What do you do? ")

    if action == "1":
        player.attack(enemy)
    elif action == "2":
        player.heal()
    else:
        print("no action")

    if enemy.alive():
        enemy.attack(player)

    print(f"Your health: {player.health}")
    print(f"Goblin health: {enemy.health}")

if player.alive():
    print("You win!")
else:
    print("You died.")

