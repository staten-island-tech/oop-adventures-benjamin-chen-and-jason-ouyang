
class Person:
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health
        self.inventory = []

    def pick_up(self, item):
        self.inventory.append(item)
        print(f"{self.name} picked up {item}")
        print("Inventory:", self.inventory)

    def attack(self, enemy):
        print(f"{self.name} attacks {enemy.name} and did {self.atk} damage")
        enemy.health -= self.atk

    def heal(self):
        self.health += 20
        print(f"{self.name} health is now {self.health}")

    def alive(self):
        return self.health > 0
    
class Rock:
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health
    
    def attack(self, atk):
        print(f"{self.name} attacked")
        self.atk = atk
    
    def status(self):
        print(f"Name: {self.name}")
        print(f"Attack DMG: {self.atk}")
        print(f"Health: {self.health}")
        
rock = Rock("rock", 10, 25)

golem = Rock("golem", 20, 50)


player = "You"
enemy = "rock", "golem", "rock", "goblin", "wizard", "boss"

while player.alive() and enemy.alive():
    print("1. Attack")
    print("2. Heal")
    action = input("What do you do? ")

    if action == "1":
        player.attack(enemy)
    elif action == "2":
        player.heal()
    else:
        print("no action")

    if enemy.alive():
        enemy.attack(player)

    print(f"Your health: {player.health}")
    print(f"enemy health: {enemy.health}")

if player.alive():
    print("You win!")
else:
    print("You died.")

class warrior: 
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health

    def status(self):
        print(f"Name: {self.name}")
        print(f"Attack: {self.atk} dmg: When HP (Hit_point) falls below 50, {self.name} inflicts {self.atk*2} dmg.")
        print(f"Health: {self.health}")

    def half_status(self):
        print(f"Attack: {self.atk}")
        print(f"Health: {self.health}")

    def basic_attack(self):
        if self.hp <= 50:
            self.atk += 25
            print(f"{self.name} went on a rampage dealing {self.atk*2} dmg: [doubled dmg].")
        elif self.hp >= 50:
            self.atk == 25
            self.hp -= 5
            print(f"{self.name} swung his sword dealing {self.atk} dmg: [weak impact].")

    def Lethal_attack(self):
        self.hp -= 25
        self.atk += 75
        print(f"{self.name} charged a Lethal_attack, dealing {self.atk} dmg and is left with {self.health}: [impactful].")

Warrior = warrior("Warrior", 25, 75)

class wizard:
    def __init__(self, name, atk, health):
        self.name = name
        self.atk = atk
        self.health = health

    def attack(self):
        if self.health <= 25 and self.health >= 2:
            print(f"{self.name} inflicted {self.atk*2}: [DOUBLE DMG]")
        elif self.health >= 50:
            self.atk == 25
            print(f"{self.name} unleased a {user_input}: INFLICTED {self.atk} dmg.")
        elif self.health == 0:
            print(f"{self.name} activated self destruct:{self.atk*4} dmg:")

    def Status(self):
        print(f"Name: {self.name}")
        print(f"Attack [DMG]: {self.atk}, {self.atk*2}, {self.atk*4}")
        print(f"Health: {self.health}")
        

Wizard = wizard("Wizard", 25, 50)

while True:

    print("1: atk")
    print("2: Status")

    Inputs = int(input("Input an option:"))

